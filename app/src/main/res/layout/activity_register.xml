<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bglogin"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/ic_logo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="84dp"
        android:background="@drawable/ic_logo2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/nunitobold"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="#016502"
        android:textSize="36sp"
        app:layout_constraintTop_toBottomOf="@id/ic_logo2"/>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nunitoregular"
        android:text="full Name"
        android:layout_marginHorizontal="48dp"
        android:textColor="#016502"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        />


    <EditText
        android:id="@+id/img_coloumn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/coloumn"
        android:hint="Enter your full name"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintStart_toStartOf="@+id/tv_name"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Email"
        android:textSize="14sp"
        android:fontFamily="@font/nunitoregular"
        android:textColor="#016502"
        app:layout_constraintTop_toBottomOf="@+id/img_coloumn"
        app:layout_constraintStart_toStartOf="@+id/img_coloumn"
        />

    <EditText
        android:id="@+id/img_coloumn2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/coloumn"
        android:hint="Enter your email"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_email"
        app:layout_constraintStart_toStartOf="@+id/tv_email"/>

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Password"
        android:textSize="14sp"
        android:fontFamily="@font/nunitoregular"
        android:textColor="#016502"
        app:layout_constraintTop_toBottomOf="@+id/img_coloumn2"
        app:layout_constraintStart_toStartOf="@+id/img_coloumn2"
        />

    <EditText
        android:id="@+id/img_coloumn3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="Enter your password"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:background="@drawable/coloumn"
        app:layout_constraintTop_toBottomOf="@+id/tv_password"
        app:layout_constraintStart_toStartOf="@+id/tv_password"
        />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="150dp"
        android:layout_height="53dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/nunitoregular"
        android:text="Register"
        android:backgroundTint="@color/white"
        android:textColor="#038103"
        app:layout_constraintTop_toBottomOf="@+id/img_coloumn3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/ic_sosmed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sosmed"
        app:layout_constraintTop_toBottomOf="@+id/btn_register"
        android:layout_marginTop="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_sosmed">

        <TextView
            android:id="@+id/tv_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Member?"
            android:fontFamily="@font/nunitoregular"
            android:textSize="16sp"
            android:textColor="#121010"
            android:layout_marginTop="62dp"
            app:layout_constraintEnd_toStartOf="@id/tv_rgs"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_rgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:fontFamily="@font/nunitobold"
            android:textSize="16sp"
            android:textColor="#121010"
            android:layout_marginTop="62dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>