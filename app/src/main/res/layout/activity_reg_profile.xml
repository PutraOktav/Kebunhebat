<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegProfileActivity">


    <ImageView
        android:id="@+id/ic_logo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo2"
        android:layout_marginTop="84dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:fontFamily="@font/nunitoregular"
        android:text="full Name"
        android:layout_marginStart="60dp"
        android:textColor="#016502"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/ic_logo2"
        app:layout_constraintStart_toStartOf="parent"
        />


    <EditText
        android:id="@+id/img_coloumn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/coloumn"
        android:hint="Enter your full name"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintStart_toStartOf="@+id/tv_name"/>

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Password"
        android:textSize="14sp"
        android:fontFamily="@font/nunitoregular"
        android:textColor="#016502"
        app:layout_constraintTop_toBottomOf="@+id/img_coloumn"
        app:layout_constraintStart_toStartOf="@+id/img_coloumn"
        />

    <EditText
        android:id="@+id/img_coloumn2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/coloumn"
        android:hint="Enter your password"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_password"
        app:layout_constraintStart_toStartOf="@+id/tv_password"/>

    <TextView
        android:id="@+id/tv_noktp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Password"
        android:textSize="14sp"
        android:fontFamily="@font/nunitoregular"
        android:textColor="#016502"
        app:layout_constraintTop_toBottomOf="@+id/img_coloumn2"
        app:layout_constraintStart_toStartOf="@+id/img_coloumn2"
        />

    <EditText
        android:id="@+id/img_coloumn3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="Enter your no ktp"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:background="@drawable/coloumn"
        app:layout_constraintTop_toBottomOf="@+id/tv_noktp"
        app:layout_constraintStart_toStartOf="@+id/tv_noktp"
        />

    <TextView
        android:id="@+id/tv_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/nunitoregular"
        android:textColor="#016502"
        android:text="Scan Ktp"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@id/img_coloumn3"
        app:layout_constraintTop_toBottomOf="@id/img_coloumn3" />

    <ImageView
        android:id="@+id/img_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_file"
        app:layout_constraintTop_toBottomOf="@id/tv_scan"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="150dp"
        android:layout_height="53dp"
        android:layout_weight="1"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/nunitoregular"
        android:text="Login"
        android:backgroundTint="@color/white"
        android:textColor="#038103"
        app:layout_constraintTop_toBottomOf="@+id/img_file"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>