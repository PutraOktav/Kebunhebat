<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgaddaddress"
    tools:context=".AddAddressActivity">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_back"
        />

    <TextView
        android:id="@+id/tv_title"
        android:text="Tambah Alamat"
        app:layout_constraintTop_toTopOf="@id/img_back"
        app:layout_constraintBottom_toBottomOf="@id/img_back"
        app:layout_constraintStart_toEndOf="@id/img_back"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/robotobold"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_nmbnk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Kebun"
        android:textColor="#121010"
        android:fontFamily="@font/nunitoregular"
        android:textSize="14sp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="520dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/img_coloumn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/coloumn"
        android:hint="masukkan nama kebun"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nmbnk"
        app:layout_constraintStart_toStartOf="@+id/tv_nmbnk"/>

    <TextView
        android:id="@+id/tv_nmpmlk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nomor Telepon Kebun"
        android:textColor="#121010"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/nunitoregular"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/img_coloumn"
        app:layout_constraintStart_toStartOf="@id/img_coloumn"
        />

    <EditText
        android:id="@+id/img_coloumn2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/coloumn"
        android:hint="masukkan nomor telepon kebun"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nmpmlk"
        app:layout_constraintStart_toStartOf="@+id/tv_nmpmlk"/>

    <TextView
        android:id="@+id/tv_nmr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat Kebun"
        android:textColor="#121010"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/nunitoregular"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/img_coloumn2"
        app:layout_constraintStart_toStartOf="@id/img_coloumn2"
        />

    <EditText
        android:id="@+id/img_coloumn3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/coloumn"
        android:hint="masukkan alamat kebun"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nmr"
        app:layout_constraintStart_toStartOf="@+id/tv_nmr"
        />

    <Button
        android:id="@+id/btn_enter"
        android:layout_width="150dp"
        android:layout_height="53dp"
        android:layout_weight="1"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/nunitoregular"
        android:text="Enter"
        android:backgroundTint="@color/white"
        android:textColor="#038103"
        app:layout_constraintTop_toBottomOf="@+id/img_coloumn3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>