<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgprofile"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_back"
        />

    <TextView
        android:id="@+id/tv_title"
        android:text="Profile Saya"
        app:layout_constraintTop_toTopOf="@id/img_back"
        app:layout_constraintBottom_toBottomOf="@id/img_back"
        app:layout_constraintStart_toEndOf="@id/img_back"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/robotobold"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/img_bg_top"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/bg_top_profile"
        android:scaleType="fitXY"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/img_back"
        />

    <View
        android:id="@+id/v_bg_white"
        android:layout_width="264dp"
        android:layout_height="68dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_white_rounded_profile"
        app:layout_constraintBottom_toBottomOf="@id/img_bg_top"
        app:layout_constraintStart_toStartOf="@id/img_bg_top"
        />

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="68dp"
        android:layout_height="68dp"
        app:layout_constraintTop_toTopOf="@id/v_bg_white"
        app:layout_constraintStart_toStartOf="@id/v_bg_white"
        android:src="@drawable/img_user"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#121010"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="Andrew"
        android:fontFamily="@font/robotobold"
        app:layout_constraintTop_toTopOf="@id/img_user"
        app:layout_constraintStart_toEndOf="@id/img_user"
        />

    <TextView
        android:id="@+id/tv_email"
        android:text="Andrewsetya210@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#99121010"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/robotoregular"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        />

    <TextView
        android:id="@+id/tv_phone"
        android:text="085643061434"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_email"
        app:layout_constraintStart_toStartOf="@id/tv_email"
        android:layout_marginTop="2dp"
        />


    <ImageView
        android:id="@+id/img_farm"
        app:layout_constraintTop_toBottomOf="@id/img_bg_top"
        android:layout_width="48dp"
        android:src="@drawable/ic_farm"
        android:layout_marginTop="32dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="48dp"
        />

    <TextView
        android:id="@+id/tv_farm_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Daftar Kebun"
        android:fontFamily="@font/robotobold"
        android:textColor="#121010"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/img_farm"
        app:layout_constraintStart_toEndOf="@id/img_farm"
        app:layout_constraintBottom_toTopOf="@id/tv_farm_subtitle"

        />

    <TextView
        android:id="@+id/tv_farm_subtitle"
        android:layout_width="wrap_content"
        android:text="Atur dan tambah kebun anda"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotoregular"
        android:textColor="#B3121010"
        app:layout_constraintTop_toBottomOf="@id/tv_farm_title"
        app:layout_constraintStart_toStartOf="@id/tv_farm_title"
        app:layout_constraintBottom_toBottomOf="@id/img_farm"
        />

    <ImageView
        android:id="@+id/img_bank"
        app:layout_constraintTop_toBottomOf="@id/img_farm"
        android:layout_width="48dp"
        android:src="@drawable/ic_bank"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="48dp"
        />

    <TextView
        android:id="@+id/tv_bank_title"
        app:layout_constraintTop_toTopOf="@id/img_bank"
        android:text="Rekening Bank"
        android:fontFamily="@font/robotobold"
        android:textColor="#121010"
        app:layout_constraintStart_toEndOf="@id/img_bank"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@id/tv_bank_subtitle"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_bank_subtitle"
        android:layout_width="wrap_content"
        android:text="Atur rekening tujuan pembayaraan"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotoregular"
        android:textColor="#B3121010"
        app:layout_constraintTop_toBottomOf="@id/tv_bank_title"
        app:layout_constraintStart_toStartOf="@id/tv_bank_title"
        app:layout_constraintBottom_toBottomOf="@id/img_bank"
        />


    <ImageView
        android:id="@+id/img_security"
        app:layout_constraintTop_toBottomOf="@id/img_bank"
        android:layout_width="48dp"
        android:src="@drawable/ic_security"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="48dp"
        />

    <TextView
        android:id="@+id/tv_security_title"
        app:layout_constraintTop_toTopOf="@id/img_security"
        android:text="Keamanan Akun"
        android:fontFamily="@font/robotobold"
        android:textColor="#121010"
        app:layout_constraintStart_toEndOf="@id/img_security"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@id/tv_security_subtitle"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_security_subtitle"
        android:layout_width="wrap_content"
        android:text="Kata sandi, PIN, &amp; Verivikasi"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotoregular"
        android:textColor="#B3121010"
        app:layout_constraintTop_toBottomOf="@id/tv_security_title"
        app:layout_constraintStart_toStartOf="@id/tv_security_title"
        app:layout_constraintBottom_toBottomOf="@id/img_security"
        />

    <ImageView
        android:id="@+id/img_notification"
        app:layout_constraintTop_toBottomOf="@id/img_security"
        android:layout_width="48dp"
        android:src="@drawable/ic_notif"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="48dp"
        />

    <TextView
        android:id="@+id/tv_notification_title"
        app:layout_constraintTop_toTopOf="@id/img_notification"
        android:text="Notifikasi"
        android:fontFamily="@font/robotobold"
        android:textColor="#121010"
        app:layout_constraintStart_toEndOf="@id/img_notification"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@id/tv_notification_subtitle"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_notification_subtitle"
        android:layout_width="wrap_content"
        android:text="Atur segala jenis notifikasi"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotoregular"
        android:textColor="#B3121010"
        app:layout_constraintTop_toBottomOf="@id/tv_notification_title"
        app:layout_constraintStart_toStartOf="@id/tv_notification_title"
        app:layout_constraintBottom_toBottomOf="@id/img_notification"
        />

    <Button
        android:id="@+id/btn_logout"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintTop_toBottomOf="@id/img_notification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:text="Log Out"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:strokeColor="#038103"
        android:fontFamily="@font/robotoregular"
        android:backgroundTint="@color/white"
        android:paddingVertical="12dp"
        android:paddingHorizontal="24dp"
        android:textColor="#038103"
        android:layout_width="wrap_content"
        app:cornerRadius="8dp"
        android:layout_height="wrap_content"
        />

</androidx.constraintlayout.widget.ConstraintLayout>